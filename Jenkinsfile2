pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                echo 'building the app..'
            }
        }
        
        stage('test') {
            steps {
                echo 'testing the app..'
            }
        }
        
        stage('deploy') {
            steps {
                echo 'deploying the app..'
            }
        }
       
    }
    
    post{
        always {
            // will always be executed whether the build fails or not
        }
        success {
            // will always be executed when the build success
        }
        
        failure {
            // will always be executed when the build fail
        }
    
    }
}
